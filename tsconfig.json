{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "rollup-multi-plugin.ts", "rollup.config.ts"]
}
